@model IEnumerable<NeighTrade.Models.Item>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All My Posted Items</title>
</head>
<body>
    <h4 class="m-lg-5">All My Posted Items</h4>
    <table class="table">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikeCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgPath)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Detail", "ItemDetail", new { item_id = item.ItemId, ShowAlreadyLikedModal = false }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListingPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LikeCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgPath)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Items", new { id = item.ItemId }, null) |
                    @Html.ActionLink("Delete", "Delete", "Items", new { id = item.ItemId }, null)
                </td>
            </tr>
        }

    </table>
</body>
</html>
