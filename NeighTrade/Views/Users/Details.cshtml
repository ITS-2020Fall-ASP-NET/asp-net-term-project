@model NeighTrade.Models.User

@{
    ViewBag.Title = "Details";
}

<div id="account-info-area">
    <div id="account-inner">
        <div id="account-top"></div>

        <div id="account-btn-area">
            @if (Session["UserName"] != null) {
                <button type="button" id="account-detail-btn" class="btn btn-success" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @Session["UserName"].ToString()[0]
                </button>
            }
        </div>

        <div id="account-detail-info">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayFor(model => model.Fname)
                    @Html.DisplayFor(model => model.Lname)
                </dt>

                <dt>
                    @Html.DisplayFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address.Address1)
                    @Html.DisplayFor(model => model.Address.Address2)
                    @Html.DisplayFor(model => model.Address.Address3),
                    @Html.DisplayFor(model => model.Address.State),
                    @Html.DisplayFor(model => model.Address.City),
                    @Html.DisplayFor(model => model.Address.PostalCode)
                </dd>

            </dl>
        </div>
        <p>
            <div class="btn btn-success">
                @Html.ActionLink("Edit Profile", "Edit", new { id = Model.UserId }, new { @class = "edit-btn" })
            </div>
        </p>
    </div>
</div>