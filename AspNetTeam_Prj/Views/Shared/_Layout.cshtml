<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NeighTrade</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <header>
        <nav class="navbar fixed-top navbar-light">
            <a class="navbar-brand" href="#">NeighTrade</a>

            <form class="form-inline my-5 my-lg-0">
                <input id="search-box" class="form-control mr-sm-2" type="search" placeholder="Try with address or item name!" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </nav>
    </header>

    @RenderBody()

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - NeighTrade</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
