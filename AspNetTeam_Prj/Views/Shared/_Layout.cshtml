<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NeighTrade</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <header>
        <nav class="navbar fixed-top navbar-light">
            <div class="container" id="nav-container">
                <a class="navbar-brand" id="logo" href="#">NeighTrade</a>

                <form class="form-inline my-5 my-lg-0">
                    <input id="search-box" class="form-control mr-sm-2" type="search" placeholder="Try with address or item name!" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>

                <span class="button-sign-in">
                    <button type="button" class="btn btn-info">Sign In</button>
                </span>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer>
        <div class="footer-container">
            <div class="footer-top">
                <ul class="footer-list">
                    <li class="footer-list-item"><a class="link-highlight" href="#">Footer Link</a></li>
                    <li class="footer-list-item"><a class="link-highlight" href="#">Footer Link</a></li>
                    <li class="footer-list-item"><a class="link-highlight" href="#">Footer Link</a></li>
                </ul>
                <ul class="footer-list">
                    <li class="footer-list-item"><a href="#">Footer Link</a></li>
                    <li class="footer-list-item"><a href="#">Footer Link</a></li>
                    <li class="footer-list-item"><a href="#">Footer Link</a></li>
                </ul>
                <ul class="footer-list">
                    <li class="footer-list-item"><a href="#">Support</a></li>
                    <li class="footer-list-item"><a href="#">Help Desk</a></li>
                    <li class="footer-list-item"><a href="#">Terms of Use</a></li>
                </ul>
            </div>

            <div class="copyright">
                <p class="copyrightText">
                    <span class="copyrightSymbol">©</span>2020 NeighTrade All rights reserved.
                </p> 
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
